<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <!-- Styles -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Wikiki</title>
</head>
<body>
    <!-- Menu -->
    <header class="menu">
        <div class="logo">
            <h1>Wiki<span>ki</span></h1>
        </div>
        <a class="button" href="/login">Login</a>
    </header>

    <!-- Nav -->
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/destaque">Destaque</a></li>
            <li><a href="#">Mais Curtidos</a></li>
            <li class="buscar">
                <form action="/buscar" method="GET">
                    <input class="input-buscar" type="text" name="keywords" id="input-buscar" placeholder="&#x1F50D; Buscar..."/>
                    <button class="botao-buscar" id="btn-busca" type="submit">Buscar</button>
                </form>
            </li>
        </ul>
    </nav>

    <main>
        <div class="artigo-container">
            <h1>Criar Artigo</h1>
            <form action="/articles/criar" method="POST">
                <input type="hidden" name="kb_id" value="7a6cc3">
                
                <label for="kb_title">Título:</label>
                <input type="text" id="kb_title" name="kb_title" value=""><br><br>
    
                <label for="kb_description">Descrição:</label>
                <input type="text" id="kb_description" name="kb_description" value=""><br><br>
    
                <label for="kb_body">Corpo do Artigo:</label>
                <textarea id="kb_body" name="kb_body"></textarea><br><br>
    
                <label for="kb_permalink">Permalink:</label>
                <input type="text" id="kb_permalink" name="kb_permalink" value=""><br><br>
    
                <label for="kb_keywords">Palavras-chave:</label>
                <input type="text" id="kb_keywords" name="kb_keywords" value=""><br><br>
    
                <label for="kb_liked_count">Contagem de Curtidas:</label>
                <input type="number" id="kb_liked_count" name="kb_liked_count" value=""><br><br>
    
                <label for="kb_published">Publicado:</label>
                <input type="checkbox" id="kb_published" name="kb_published" value="true"><br><br>
    
                <label for="kb_suggestion">Sugestão:</label>
                <input type="checkbox" id="kb_suggestion" name="kb_suggestion" value="true"><br><br>
    
                <label for="kb_featured">Destaque:</label>
                <input type="checkbox" id="kb_featured" name="kb_featured" value="true"><br><br>
    
                <label for="kb_author_email">Email do Autor:</label>
                <input type="email" id="kb_author_email" name="kb_author_email" value=""><br><br>
    
                <label for="kb_published_date">Data de Publicação:</label>
                <input type="date" id="kb_published_date" name="kb_published_date" value=""><br><br>
    
                <label for="kb_image">URL da Imagem:</label>
                <input type="text" id="kb_image" name="kb_image" value=""><br><br>
    
                <input type="submit" value="Salvar">
            </form>
        </div>
    </main>    
    
</body>
</html>