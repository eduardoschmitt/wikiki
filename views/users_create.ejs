<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <!-- Styles -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Wikiki</title>
</head>
<body>
    <!-- Menu -->
    <header class="menu">
        <div class="logo">
            <h1>Wiki<span>ki</span></h1>
        </div>
        <a class="button" href="/login">Login</a>
    </header>

    <!-- Nav -->
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/destaque">Destaque</a></li>
            <li><a href="#">Mais Curtidos</a></li>
            <li class="buscar">
                <form action="/buscar" method="GET">
                    <input class="input-buscar" type="text" name="keywords" id="input-buscar" placeholder="&#x1F50D; Buscar..."/>
                    <button class="botao-buscar" id="btn-busca" type="submit">Buscar</button>
                </form>
            </li>
        </ul>
    </nav>

    <main>
        <div class="artigo-container">
            <h1>Criar Usuário</h1>
            <form action="/login/criar" method="POST">
                <label for="author_name">Nome:</label>
                <input type="text" id="author_name" name="author_name" required><br><br>
    
                <label for="author_email">Email:</label>
                <input type="email" id="author_email" name="author_email" required><br><br>
    
                <label for="author_user">Usuário:</label>
                <input type="text" id="author_user" name="author_user" required><br><br>
    
                <label for="author_pwd">Senha:</label>
                <input type="password" id="author_pwd" name="author_pwd" required><br><br>
    
                <label for="author_level">Nível:</label>
                <select id="author_level" name="author_level">
                    <option value="admin">Admin</option>
                    <option value="usuario">Usuário</option>
                </select><br><br>
    
                <label for="author_status">Status:</label>
                <select id="author_status" name="author_status">
                    <option value="true">Ativo</option>
                    <option value="false">Inativo</option>
                </select><br><br>
    
                <input type="submit" value="Salvar">
            </form>
        </div>
    </main>    
    
</body>
</html>